@using snowcoreBlog.Frontend.Core.Constants
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, height=device-height initial-scale=1.0" />
    <title>snowcore's Blog</title>
    <base href="@(HttpContext.Request.PathBase.Value + "/")" />
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="@Assets["css/source-sans-3/source-sans-3.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["snowcoreBlog.Frontend.Host.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    @if (IsNonClient)
    {
        <AppInit @rendermode="new InteractiveServerRenderMode(prerender: false)"/>
    }
    <Routes @rendermode="InteractiveAuto"/>
    <script src="_framework/blazor.web.js"></script>
    <script
        src="_content/Microsoft.FluentUI.AspNetCore.Components/Microsoft.FluentUI.AspNetCore.Components.lib.module.js"
        type="module" async></script>
    <script src="_content/Microsoft.FluentUI.AspNetCore.Components/js/loading-theme.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/altcha/dist/altcha.min.js" type="module" async defer></script>
    <loading-theme storage-name="theme"></loading-theme>
</body>

</html>

@code
{
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private bool IsNonClient => RendererInfo.Name != RendererNameConstants.WebAssembly;

    private IComponentRenderMode? PageRenderMode =>
        HttpContext.AcceptsInteractiveRouting() ? InteractiveAuto : default;
}